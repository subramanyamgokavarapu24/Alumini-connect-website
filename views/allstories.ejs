<% layout("/layouts/boilerplate.ejs") -%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stories</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card {
            display: flex;
            flex-direction: column;
            height: 100%;
            min-height: 300px;
        }

        .card-body {
            flex: 1;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

        .card-text {
            flex: 1;
        }

        .card-footer {
            margin-top: auto;
        }

        .read-more-button {
            margin-top: auto;
        }

        .add-story-button {
            margin-bottom: 20px;
            font-size: 1.1rem;
        }
    </style>
</head>
<body>
  <div class="container mt-4">
    <div class="row mb-4">
      <div class="col">
        <a href="/stories/new" class="btn btn-primary add-story-button">Add New Story</a>
      </div>
    </div>
    <div class="row">
      <% stories.forEach(story => { %>
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= story.title %></h5>
              <p class="card-text"><%= story.content.length > 100 ? story.content.substring(0, 100) + '...' : story.content %></p>
              <p class="card-text"><%= story.publishedAt %></p>
              <a href="/stories/<%= story._id %>" class="btn btn-primary read-more-button">Read More</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <!-- Include Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
