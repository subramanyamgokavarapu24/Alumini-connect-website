<% layout("/layouts/boilerplate.ejs") -%>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>New Feedback Form</title>
    <style>
        body {
            background-color: #f7f9fc;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px;
            margin-top: 90px;
        }
        .form-container {
            max-width: 600px;
            margin: 0 auto;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-top: 30px;
        }
        .form-title {
            text-align: center;
            margin-bottom: 20px;
            font-size: 24px;
            font-weight: 600;
            color: #333333;
        }
        .form-label {
            font-weight: 500;
        }
        .form-control {
            border-radius: 6px;
            border: 1px solid #ced4da;
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
        }
        .btn-primary {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border-radius: 6px;
        }
        .btn-primary:hover {
            background-color: #004085;
            border-color: #003766;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h2 class="form-title">Submit Your Feedback</h2>
        <form action="/feedback/new" method="post">
            <div class="mb-3">
                <label for="title" class="form-label">Title:</label>
                <input type="text" class="form-control" name="title" id="title" required>
            </div>

            <div class="mb-3">
                <label for="message" class="form-label">Feedback:</label>
                <textarea type="text" class="form-control" name="message" id="message" placeholder="Write your feedback here..." rows="5" required></textarea>
            </div>

            <button class="btn btn-primary" type="submit">Submit</button>
        </form>
    </div>
</body>
</html>
