<% layout("/layouts/boilerplate.ejs") -%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Feedback Details</title>
    <style>
        body {
            background-color: #f4f7f9;
            font-family: 'Roboto', sans-serif;
            color: #333;
        }
        .content-container {
            padding-top: 80px; /* Adjust based on your navbar's height */
            padding-left: 20px;
            padding-right: 20px;
        }
        .feedback-detail {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 800px;
            margin: auto;
        }
        h1 {
            text-align: center;
            color: #2c3e50;
        }
        h2 {
            color: #34495e;
        }
        p {
            font-size: 16px;
            line-height: 1.6;
        }
        .date-submitted {
            color: #7f8c8d;
            font-size: 14px;
            margin-top: 15px;
        }
        .user-info {
            font-style: italic;
            color: #7f8c8d;
        }
        .btn {
            border-radius: 5px;
            transition: background-color 0.3s ease;
            text-decoration: none;
            padding: 10px 15px;
            color: white;
            font-size: 16px;
            display: inline-block;
            border: none;
            cursor: pointer;
        }
        .btn-danger {
            background-color: #dc3545;
        }
        .btn-danger:hover {
            background-color: #c82333;
        }
    </style>
</head>
<body>
    <div class="content-container">
        <div class="feedback-detail">
            <h1>Feedback Details</h1>
            <h2>Title: <%= feedback.title %></h2>
            <p><strong>Message:</strong> <%= feedback.message %></p>
            <p class="date-submitted">Date Submitted: <%= feedback.dateSubmitted %></p>
            <p class="user-info">Submitted by: <%= feedback.userId.username %></p>
            <% if (currentUser && (currentUser._id.equals(feedback.userId._id) || currentUser.isAdmin)) { %>
                <form action="/feedback/<%= feedback._id %>/delete" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Delete Feedback</button>
                </form>
            <% } %>
        </div>
    </div>
</body>
</html>
