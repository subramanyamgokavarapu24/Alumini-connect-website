<% layout("/layouts/boilerplate.ejs") -%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Post</title>
    <style>
        body {
            font-family: 'Helvetica Neue', Arial, sans-serif;
            background-color: #f0f2f5;
            margin: 0;
            padding: 0;
            margin-top: 65px;
        }

        .form-container {
            background-color: #ffffff;
            border-radius: 10px;
            padding: 40px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 700px;
            margin: 30px auto;
            border: 1px solid #e0e0e0;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            font-weight: 700;
            color: #333;
            font-size: 2rem;
        }

        .form-control {
            border-radius: 8px;
            border: 1px solid #dcdcdc;
            padding: 12px;
            font-size: 16px;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.5);
            outline: none;
        }

        .btn-primary {
            background-color: #007bff;
            color: #ffffff;
            border: none;
            padding: 12px 24px;
            font-size: 16px;
            border-radius: 8px;
            width: 100%;
            transition: background-color 0.3s ease, transform 0.3s ease;
            cursor: pointer;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: translateY(-2px);
        }

        .mb-3 {
            margin-bottom: 20px;
        }

        textarea {
            resize: vertical;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>Create New Post</h2>
        <form action="/users/<%= currentUser._id %>/newpost" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <input class="form-control" type="text" placeholder="Enter the title" name="title" required>
            </div>
            <div class="mb-3">
                <textarea name="content" id="content" class="form-control" placeholder="Enter the content" rows="6" required></textarea>
            </div>
            <div class="mb-3">
                <input type="file" class="form-control" name="img">
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>
        </form>
    </div>
</body>
</html>
